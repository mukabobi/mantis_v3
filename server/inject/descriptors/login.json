  "type": "object",
  "properties": {
    "isLogin": {
      "type": "identifier",
      "selector": "body",
      "control": "exists"
    },
    "username": {
      "type": "string",
      "control": "text",
      "selector": "input[name=\"username\"]"
    },
    "password": {
      "type": "string",
      "selector": "input[name=\"password\"]",
      "control": "text"
    },
    "errormessage": {
      "type": "string",
      "selector": "div > font[color=\"red\"]",
      "control": "property.innerText"
    },
    "loginclick": {
      "type": "action",
      "control": "property.innerText"
    }
  },
  "connect": []
}
